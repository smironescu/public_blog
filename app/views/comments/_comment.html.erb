<div class="comment clearfix">
  <div class="comment_content">
    <p class="comment_name"><%= image_tag "logo.png", width: '30px', height: '30px', style: 'margin-right: 5px' %><%= comment.name %><p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
    </p>
    <div class="comment_body"><%= markdown(comment.body).html_safe %></div>
    <% if logged_in? && current_user.admin? %>
    <p class="comment"><%= link_to 'Delete', [comment.post, comment],
                  method: :delete,
                  class: "button",
                  data: { confirm: 'Are you sure?' } %>
    </p>
    <% end %>
  </div>
</div>
