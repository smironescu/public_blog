<% @posts.each do |post| %>
<% if post.categories == 'Ruby' %>
<div class="post_wrapper">
    <h2 class="title"><%= link_to post.title, ruby_show_path(post) %></h2>
    <p class="date"><%= post.created_at.strftime("%B %d, %Y") %></p>
    <p class="category-show">
      Category: <strong><%= post.categories %></strong>
    </p>
  </div>
<% end %>
<% end %>

